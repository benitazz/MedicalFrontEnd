            <div class="form-group">
              <button type="submit" 
                      class="btn btn-primary btn-block" 
                      [disabled]="!loginForm.valid">
                Sign in
              </button>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox"> keep me logged-in
              </label>
            </div>
          </form>

          <hr />
          <div class="container">
            <div class="row justify-content-center">
              New here ? <a [routerLink]="['/registration']"><b>Join Us</b></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
